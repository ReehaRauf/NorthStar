# Environment
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Database
DATABASE_URL=sqlite+aiosqlite:///./space_agent.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/space_agent

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

# API Keys
N2YO_API_KEY=your_n2yo_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Space Weather APIs (mostly free, no key needed)
NOAA_SWPC_BASE_URL=https://services.swpc.noaa.gov

# Launch Library
LAUNCH_LIBRARY_BASE_URL=https://ll.thespacedevs.com/2.2.0

# Demo Mode (uses sample data instead of real APIs)
DEMO_MODE=false

# Alert Configuration
ALERT_COOLDOWN_MINUTES=60
MAX_ALERTS_PER_DAY=50

# Knowledge Base
KB_PATH=./data/knowledge_base
VECTOR_STORE_PATH=./data/vector_store

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Background Tasks
ENABLE_SCHEDULER=true
SPACE_WEATHER_UPDATE_INTERVAL=300  # 5 minutes
TLE_UPDATE_INTERVAL=86400  # 24 hours